<div class="page-header"><h1>Upload Photo</h1></div>

<%= form_tag "/photos", method: :post, html: { multipart: true } do %>

  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>

  <div class="form-group">
    <%= label_tag :image %>
    <%= file_field_tag :image %>
  </div>

  <%= submit_tag 'Upload', class: 'btn btn-primary' %>
<% end %>